<!doctype html>
<html lang="en">
  <head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <title><%= blog.title %> - Blog Reading</title>
    <link rel="stylesheet" href="/css/style.css">
  </head>
  <body>

    <header>
      <%- include('layouts/header'); %>
    </header>
    <hr>

    <div class="container">
      <h1 class="blog-title"><%= blog.title %></h1>
      <p class="blog-author">By <strong><%= blog.author %></strong></p>

      <div class="blog-body">
        <p><%= blog.body %></p>
      </div>

      <p class="blog-date">Published on: <%= new Date(blog.date).toLocaleDateString() %></p>
    </div>

    <footer>
      <%- include('layouts/footer'); %>
    </footer>

  </body>
</html>
