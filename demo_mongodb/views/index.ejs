<!doctype html>
<html lang="en">
  <head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <title>Blog</title>
    <link rel="stylesheet" href="/css/style.css">
  </head>
  <body>
    <header>
      <%- include('layouts/header'); %>
    </header>
    <hr></hr>

    <div class="form">
      <div>
        <h1 style="text-align:center">Create your first blog</h1>
        <form action="/blogs" method=POST>
          <div class="form-group">
            <label> Title </label>
            <input type="text" id="title" name="title" required>
          </div>
          <div class="form-group">
            <label> Author </label>
            <input type="text" id="author" name="author" required>
          </div>
          <div class="form-group">
            <label> Content </label>
            <textarea id="body" name="body" rows="10" required></textarea>
          </div>
          <!--<div class="form-group">-->
          <!--  <label for="comments"> Comments </label>-->
          <!--  <textarea id="comments" name="comments" rows="5" required placeholder="Add comments if any"></textarea>-->
          <!--</div>-->
          <div class="form-group">
            <label for="date">Date:</label>
            <input type="date" id="date" name="date"><br><br>
          </div>
          <div class="form-group">
            <label>Hidden</label>
            <select id="hidden" name="hidden">
              <option value="false">No</option>
              <option value="true">Yes</option>
            </select>
          </div>
          <div class="form-group">
            <label for="votes">Votes</label>
            <input type="number" id="votes" name="meta[votes]" min="0"

            <label for="favs">Favorite</label>
            <input type="number" id="favs" name="meta[favs]" min="0">
          </div>
          <button>Submit</button>
        </form>
      </div>
    </div>

    <div class="blogs">
      <% if (blogs.length > 0) { %>
        <h1>All available blogs</h1>
        <%- include('layouts/blogs', {blogs: blogs}); %>
      <% } else { %>
        <p>No blogs available.</p>
      <% } %>
    </div>

    <%- include('layouts/footer'); %>
  </body>
</html>
